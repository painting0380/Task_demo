<div class="mt-3 d-flex align-items-center justify-content-center">
  <h2><%= t('註冊樣版') %></h2>
</div>

<%= form_with model: @user, url: sign_up_path do |form| %>

	<% if @user.errors.any? %>
		<div class="alert alert-danger">
			<% @user.errors.full_messages.each do |messages| %>
				<div><%= messages %></div>
			<% end %>
		</div>
	<% end %>

	<div class="mb-3">
		<%= form.label :email, I18n.t(:Email帳號樣版) %>
		<%= form.text_field :email, class: "form-control", placeholder: "steve@gmail.com" %>
	</div>
	<div class="mb-3">
		<%= form.label :password_field, I18n.t(:密碼樣版) %>
		<%= form.password_field :password, class: "form-control", placeholder: "password" %>
	</div>
	<div class="mb-3">
		<%= form.label :password_field, I18n.t(:密碼確認樣版) %>
		<%= form.password_field :password_confirmation, class: "form-control", placeholder: "password_confirmation" %>
	</div>
	<div class="mb-3">
		<%= form.submit I18n.t(:註冊樣版), class:'btn btn-primary' %>
	</div>

<% end %> 